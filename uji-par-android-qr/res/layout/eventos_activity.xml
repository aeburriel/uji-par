<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventosActivity" >

    <ListView
        android:id="@+id/eventos"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/sinEventos"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <TextView
            android:id="@+id/eventos_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_refresh"
            android:text="@string/eventos_list_empty"
            android:padding="10sp"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/settings_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@android:drawable/ic_menu_preferences"
            android:text="@string/settings_empty"
            android:padding="10sp"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>