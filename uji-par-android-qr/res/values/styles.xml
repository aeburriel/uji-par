<resources>

    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="listItem">
        <item name="android:background">@drawable/item_lista_background</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="listItemTexto" parent="android:Widget.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sesionInfoTitulo" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="sesionInfoFecha" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="sesionInfoValorNumero" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>